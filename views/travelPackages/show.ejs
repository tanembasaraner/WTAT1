<h1 class="center">Package Data for
    <%= travelPackage.country%>
  </h1>
  
  <table class="table">
    <tr>
      <th>Country</th>
      <td>
        <%= travelPackage.country%>
      </td>
    </tr>
    <tr>
      <th>Price</th>
      <td>
        <%= travelPackage.price%>
      </td>
    </tr>
    <tr>
      <th>Dates</th>
      <td>
        <%= travelPackage.dates%>
      </td>
    </tr>
  </table>
  

  <div>
    <a class="button" href="<%=`/travelPackages/${travelPackage._id}/edit`%>">
      Edit Package Details
    </a>
  </div>
  <div>
    <a class="button" href="<%= `/travelPackages/${travelPackage._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
  </div>
  <div>
    <a class="button" href="/travelPackages">View all packages</a>
  </div>
  