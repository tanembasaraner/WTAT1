<h2 class="center">Packages Table</h2>
<table class="table">
    <thead>
        <tr>
            <th>Country</th>
            <th>Price</th>
            <th>Dates</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% travelPackages.forEach(travelPackage=> { %>
            <tr>
                <td>
                    <a href="<%= `/travelPackages/${travelPackage._id}` %>">
                        <%= travelPackage.country %>
                    </a>
                </td>
                <td>
                    <%= travelPackage.price %>
                </td>
                <td>
                    <%= travelPackage.dates %>
                </td>
                <td>
                    <a href="<%=`/travelPackages/${travelPackage._id}/edit`%>">
                        Edit
                    </a>
                </td>
                <td>
                    <a href="<%= `/travelPackages/${travelPackage._id}/delete?_method=DELETE` %>"
                        onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
                </td>
            </tr>
            <% }); %>
    </tbody>
</table>